{
  "name": "pipefy-enhancer",
  "description": "A suit to improve various tasks in context of Pipefy.",
  "version": "1.5.0",
  "author": "Tim Bernhard @GenieTim",
  "bin": {
    "pipefy-enhancer": "./bin/run.js"
  },
  "bugs": "https://github.com/GenieTim/PipefyEnhancer/issues",
  "dependencies": {
    "@inquirer/prompts": "^7.9.0",
    "@oclif/core": "^4.8.0",
    "@oclif/plugin-help": "^6.2.35",
    "@oclif/plugin-version": "^2.2.36",
    "graphql": "^16.12.0",
    "graphql-request": "^7.3.1",
    "inquirer": "^12.10.0",
    "playwright": "^1.56.1",
    "twing": "^7.2.2",
    "y18n": "^5.0.8"
  },
  "devDependencies": {
    "@oclif/prettier-config": "^0.2.1",
    "eslint": "^9.39.0",
    "eslint-config-oclif": "^6.0.115",
    "eslint-plugin-unicorn": "^62.0.0",
    "prettier": "^3.6.2",
    "prettier-plugin-twig-melody": "^0.4.6"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "type": "module",
  "files": [
    "/bin",
    ".oclif.manifest.json",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json",
    "/src"
  ],
  "homepage": "https://github.com/GenieTim/PipefyEnhancer",
  "keywords": [
    "oclif"
  ],
  "license": "GPL-3.0-or-later",
  "main": "src/index.js",
  "oclif": {
    "commands": "./src/commands",
    "bin": "pipefy-enhancer",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-version"
    ],
    "additionalHelpFlags": [
      "-h"
    ],
    "additionalVersionFlags": [
      "-v"
    ]
  },
  "repository": "GenieTim/PipefyEnhancer",
  "scripts": {
    "fix": "eslint . --fix",
    "postpack": "rm -f oclif.manifest.json",
    "posttest": "eslint .",
    "prepack": "oclif-dev manifest && oclif-dev readme",
    "test": "echo NO TESTS",
    "version": "oclif-dev readme && git add README.md",
    "readme": "oclif-dev readme"
  }
}
